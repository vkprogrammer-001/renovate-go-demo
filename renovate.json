{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["require"],
      "enabled": false
    },
    {
      "matchManagers": ["gomod"],
      "matchDepTypes": ["require"],
      "matchUpdateTypes": ["patch", "minor", "major"],
      "enabled": true,
      "vulnerabilityAlerts": true
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": ["security"]
  }
}