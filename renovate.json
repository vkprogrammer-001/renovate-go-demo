{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "require"
      ],
      "enabled": false
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "require"
      ],
      "matchUpdateTypes": [
        "patch",
        "minor",
        "major"
      ],
      "enabled": true,
      "vulnerabilityAlerts": {
        "enabled": true
      }
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security"
    ]
  }
}
